extends ../default

block content
  include ../templates/nav
  div(class=['ui','container','grid','stackable'])
    div(class=['ten','wide','column'])
      h2(class=['ui','header','blue','dividing'])= 'Crear Ruta de Ida'
      
      div(class='form-nuevarutaIda')
        form(class=['ui','form'] action='/crearRutaIda' method='post')
          div(class=['ui','field'])
            label(for='nombreRutaIda')= 'Nombre'
            input(type='text' name="nombreRutaIda" placeholder='Nombre')
        
          div(class=['ui','field'])
            label(for='numParadasIda')= 'Paradas'
            input(type='text' name="numParadasIda" placeholder='Paradas')

          button(class=['ui','button','basic','black'])= 'Crear Ruta de Ida'
          div(class=['ui','message','error'])
      
      if info != undefined
        div(class=['ui','message','success'])
          i(class=['close','icon'])
          div(class='header')= 'Ruta de Ida registrada'
          p= info
  //- script(src='/javascripts/validacion.js')
