extends ../default

block content
  include ../templates/nav
  div(class=['ui','container','grid','stackable'])
    div(class=['ten','wide','column'])
      h2(class=['ui','header','blue','dividing'])= 'Crear Ruta'
      
      div(class='form-nuevaruta')
        form(class=['ui','form'] action='/crearRuta' method='post')
          div(class=['ui','field'])
            label(for='nombreRuta')= 'Nombre'
            input(type='text' name="nombreRuta" placeholder='Nombre')
            
          div(class=['ui','field'])
            label(for='numParadas')= 'Paradas'
            input(type='text' name="numParadas" placeholder='Paradas')
            
          div(class=['ui','field'])
            label(for='idrutaIda')= 'Ruta Ida'
            select(class=['ui', 'dropdown'] name="idrutaIda")
              option(value="" disabled selected hidden)= 'Ruta Ida'
              each ruI in rutaida
                option(value=ruI.idrutaIda)= ruI.nombreRutaIda
                
          div(class=['ui','field'])
            label(for='idrutaVuelta')= 'Ruta Vuelta'
            select(class=['ui', 'dropdown'] name="idrutaVuelta")
              option(value="" disabled selected hidden)= 'Ruta Vuelta'
              each ruV in rutavuelta
                option(value=ruV.idrutaVuelta)= ruV.nombreRutaVuelta
            
          //- div(class=['ui','field'])
          //-   label(for='idrutaIda')= 'Ruta Ida'
          //-   input(type='text' name="idrutaIda" placeholder='Ruta Ida')
          //-   
          //- div(class=['ui','field'])
          //-   label(for='idrutaVuelta')= 'Ruta Vuelta'
          //-   input(type='text' name="idrutaVuelta" placeholder='Ruta Vuelta')
            
          button(class=['ui','button','basic','black'])= 'Crear Ruta'
          div(class=['ui','message','error'])
      
      if info != undefined
        div(class=['ui','message','success'])
          i(class=['close','icon'])
          div(class='header')= 'Ruta registrada'
          p= info
