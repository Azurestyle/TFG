extends ../default

block content
  include ../templates/nav
  div(class=['ui','container','grid','stackable'])
    div(class=['sixteen','wide','column'])
      h2(class=['ui','header','blue','dividing'])= 'Lista de rutas'
      
      table(class=['ui','table','celled'] id='tbl-ruta')
        thead
          tr
            th= 'ID'
            th= 'Nombre'
            th= 'Paradas'
            th= 'Ruta Ida'
            th= 'Ruta Vuelta'
            th= 'Acciones'
            
        tbody
          each ru in ruta
            tr
              td(id='id')= ru.idruta
              td= ru.nombreRuta
              td= ru.numParadas
              td= ru.idrutaIda
              td= ru.idrutaVuelta
              td
                a(class=['ui button basic icon '] href='/modificarRuta/'+ru.idruta data-inverted='' data-tooltip='Modificar' data-position='top center')
                  i(class=['write icon blue'])
                  
                a(class=['ui button basic icon '] href='#' data-inverted='' data-tooltip='Eliminar' data-position='top center' id='btn-eliminar')
                  i(class=['trash icon red'])
                  
  script(src="/javascripts/ruta.js")
