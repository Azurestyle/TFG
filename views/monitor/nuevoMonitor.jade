extends ../default

block content
  include ../templates/nav
  div(class=['ui','container','grid','stackable'])
    div(class=['ten','wide','column'])
      h2(class=['ui','header','blue','dividing'])= 'Crear Monitor'
      
      div(class='form-nuevomonitor')
        form(class=['ui','form'] action='/crearMonitor' method='post')
          div(class=['ui','field'])
            label(for='nombreMonitor')= 'Nombre'
            input(type='text' name="nombreMonitor" placeholder='Nombre')
            
          div(class=['ui','field'])
            label(for='email')= 'Email'
            input(type='text' name="email" placeholder='Email')
            
          div(class=['ui','field'])
            label(for='telefonoMonitor')= 'Teléfono'
            input(type='text' name="telefonoMonitor" placeholder='Teléfono')

          button(class=['ui','button','basic','black'])= 'Crear Monitor'
          div(class=['ui','message','error'])
      
      if info != undefined
        div(class=['ui','message','success'])
          i(class=['close','icon'])
          div(class='header')= 'Monitor registrado'
          p= info
