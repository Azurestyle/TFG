extends ../default

block content
  include ../templates/nav
  div(class=['ui','container','grid','stackable'])
    div(class=['ten','wide','column'])
      h2(class=['ui','header','blue','dividing'])= 'Crear Ruta de Vuelta'
      
      div(class='form-nuevarutaVuelta')
        form(class=['ui','form'] action='/crearRutaVuelta' method='post')
          div(class=['ui','field'])
            label(for='nombreRutaVuelta')= 'Nombre'
            input(type='text' name="nombreRutaVuelta" placeholder='Nombre')
        
          div(class=['ui','field'])
            label(for='numParadasVuelta')= 'Paradas'
            input(type='text' name="numParadasVuelta" placeholder='Paradas')

          button(class=['ui','button','basic','black'])= 'Crear Ruta de Vuelta'
          div(class=['ui','message','error'])
      
      if info != undefined
        div(class=['ui','message','success'])
          i(class=['close','icon'])
          div(class='header')= 'Ruta de Vuelta registrada'
          p= info
