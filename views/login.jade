extends default

block content

  div(class=['ui','middle','aligned','centered','grid'] style='max-width:25em;;margin:auto;margin-top:10em')
    div(class=['column'])
      h2(class=['ui','teal','image','header'])
        img(class='image' src='images/autobus.png')
        div(class='content')= 'Iniciar Sesión'
      form(class=['ui','large','form'] action='/gestion' method='get')
        div(class=['ui','stacked','segment'])
          div(class=['field'])
            div(class=['ui','left','icon','input'])
              i(class=['user','icon'])
              input(type='text' name='email' placeholder='Usuario')
          div(class=['field'])
            div(class=['ui','left','icon','input'])
              i(class=['lock','icon'])
              input(type='password' name='password' placeholder='Contraseña')
      
          div(class=['ui','fluid','large','teal','submit','button'])= 'Iniciar sesión'
          div(class=['ui','error','message'])

  
  script(src='/javascripts/validacionLogin.js')
