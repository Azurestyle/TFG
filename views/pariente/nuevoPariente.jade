extends ../default

block content
  include ../templates/nav
  div(class=['ui','container','grid','stackable'])
    div(class=['ten','wide','column'])
      h2(class=['ui','header','blue','dividing'])= 'Crear Pariente'
      
      div(class='form-nuevopariente')
        form(class=['ui','form'] action='/crearPariente' method='post')
          div(class=['ui','field'])
            label(for='nombre')= 'Nombre'
            input(type='text' name="nombre" placeholder='Nombre')
            
          div(class=['ui','field'])
            label(for='foto')= 'Foto'
            input(type='file' name="foto" placeholder='Foto')
            
          div(class=['ui','field'])
            label(for='idmatriculado')= 'Hijo/a'
            select(class=['ui', 'dropdown'] name="idmatriculado")
              option(value="" disabled selected hidden)= 'Hijo/a'
              each mat in matriculado
                option(value=mat.idmatriculado)= mat.primer_nombre
                
                
          div(class=['ui','field'])
            label(for='email')= 'Email'
            input(type='text' name="email" placeholder='Email')
                  
          div(class=['ui','field'])
            label(for='telefono')= 'Teléfono'
            input(type='text' name="telefono" placeholder='Teléfono')
                
          
            
          //- div(class=['ui','field'])
          //-   label(for='idmatriculado')= 'Pariente Ida'
          //-   input(type='text' name="idmatriculado" placeholder='Pariente Ida')
          //-   
          //- div(class=['ui','field'])
          //-   label(for='idparienteVuelta')= 'Pariente Vuelta'
          //-   input(type='text' name="idparienteVuelta" placeholder='Pariente Vuelta')
            
          button(class=['ui','button','basic','black'])= 'Crear Pariente'
          div(class=['ui','message','error'])
      
      if info != undefined
        div(class=['ui','message','success'])
          i(class=['close','icon'])
          div(class='header')= 'Pariente registrada'
          p= info
