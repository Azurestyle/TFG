extends ../default

block content
  include ../templates/nav
  div(class=['ui','container','grid','stackable'])
    div(class=['ten','wide','column'])
      h2(class=['ui','header','blue','dividing'])= 'Crear Curso'
      
      div(class='form-nuevocursoescolar')
        form(class=['ui','form'] action='/crearCursoescolar' method='post')
          div(class=['ui','field'])
            label(for='nombrecurso')= 'Curso'
            input(type='text' name="nombrecurso" placeholder='Curso')
            
          div(class=['ui','field'])
            label(for='clase')= 'Clase'
            input(type='text' name="clase" placeholder='Clase')
            
          

          button(class=['ui','button','basic','black'])= 'Crear Curso'
          div(class=['ui','message','error'])
      
      if info != undefined
        div(class=['ui','message','success'])
          i(class=['close','icon'])
          div(class='header')= 'Curso registrado'
          p= info
  //- script(src='/javascripts/validacion.js')
