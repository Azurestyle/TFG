extends ../default

block content
  include ../templates/nav
  div(class=['ui','container','grid','stackable'])
    div(class=['ten','wide','column'])
      h2(class=['ui','header','blue','dividing'])= 'Modificar Curso'
      
      div(class='form-nuevocursoescolar')
        form(class=['ui','form'] action='/editarCursoescolar' method='post')
          div(class=['ui','field'])
            label(for='nombrecurso')= 'Curso'
            input(type='text' name="nombrecurso" placeholder='Curso' value=cursoescolar[0].nombrecurso)
          
          div(class=['ui','field'])
            label(for='clase')= 'Clase'
            input(type='text' name="clase" placeholder='Clase' value=cursoescolar[0].clase)
            
        
            
            
            input(type='hidden' name="idcursoescolar" value=cursoescolar[0].idcursoescolar)
          button(class=['ui','button','basic','black'])= 'Modificar Curso'
          div(class=['ui','message','error'])
      
    
